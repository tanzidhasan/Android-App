<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pd_back_color"
    tools:context=".PostDetailsActivity">

    <LinearLayout
        android:id="@+id/pd_ll_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/pd_head_back_color"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pd_t_full_nam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="23sp"
                android:layout_marginLeft="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/pd_head_text_color" />

            <TextView
                android:id="@+id/pd_t_post_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="25dp"
                android:text="12:00am, 1 January 2020"
                android:textColor="@color/pd_head_text_color"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:background="@color/pd_body_back_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/pd_body_text_color" />
                <TextView
                    android:id="@+id/pd_t_bl_grp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+"
                    android:textSize="17sp"
                    android:textColor="@color/pd_body_text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:paddingLeft="5sp"
                android:background="@color/pd_body_back_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount of Blood : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/pd_body_text_color" />

                <TextView
                    android:id="@+id/pd_t_bl_am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="17sp"
                    android:textColor="@color/pd_body_text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pd_body_back_color"
                android:layout_marginTop="5sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Disease : "
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/pd_body_text_color" />

                <TextView
                    android:id="@+id/pd_t_ab_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Cancer "
                    android:textSize="17sp"
                    android:textColor="@color/pd_body_text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pd_body_back_color"
                android:layout_marginTop="5sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hopital Name : "
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/pd_body_text_color" />

                <TextView
                    android:id="@+id/pd_t_hos_nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Pabna Medical College Hospital"
                    android:textSize="17sp"
                    android:textColor="@color/pd_body_text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pd_body_back_color"
                android:layout_marginTop="5sp"
                android:paddingLeft="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/pd_body_text_color" />

                <TextView
                    android:id="@+id/pd_t_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pabna"
                    android:textSize="17sp"
                    android:textColor="@color/pd_body_text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:paddingLeft="5sp"
                android:background="@color/pd_body_back_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadline : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/pd_body_text_color" />

                <TextView
                    android:id="@+id/pd_t_dl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00pm, 2 January 2020"
                    android:textSize="17sp"
                    android:textColor="@color/pd_body_text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:paddingLeft="5sp"
                android:background="@color/pd_body_back_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile No. : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/pd_body_text_color" />

                <TextView
                    android:id="@+id/pd_t_mob_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01712345678"
                    android:textSize="17sp"
                    android:textColor="@color/pd_body_text_color" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>