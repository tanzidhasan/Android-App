<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bl_req_post_head_back_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/t_br_full_nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="18sp"
            android:layout_marginStart="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/t_br_post_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginStart="30sp"
            android:text="12:00am, 1 January 2020"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:paddingStart="5sp"
        android:paddingEnd="5sp"
        android:orientation="vertical"
        android:background="@color/bl_req_post_body_back_color"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group : "
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/bl_req_text_color"
                />
            <TextView
                android:id="@+id/t_br_bl_grp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A+"
                android:textSize="15sp"
                android:textColor="@color/bl_req_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Disease : "
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/bl_req_text_color"
                />
            <TextView
                android:id="@+id/t_br_ab_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancer"
                android:textSize="15sp"
                android:textColor="@color/bl_req_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District : "
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/bl_req_text_color"
                />
            <TextView
                android:id="@+id/t_br_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pabna"
                android:textSize="15sp"
                android:textColor="@color/bl_req_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline : "
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/bl_req_text_color"
                />
            <TextView
                android:id="@+id/t_br_dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00pm, 2 January 2020"
                android:textSize="15sp"
                android:textColor="@color/bl_req_text_color"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
