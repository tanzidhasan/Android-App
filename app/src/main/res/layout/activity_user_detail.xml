<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/profile_back_color"
    tools:context=".UserDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ud_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/t_ud_own_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50sp"
                android:gravity="center"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="Own Info"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="18sp"
                android:paddingEnd="18sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/round_button"
                android:orientation="horizontal"
                tools:ignore="RtlSymmetry">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:gravity="center"
                    android:textColor="@color/profile_text_color"
                    android:text="Full Name : "
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_ud_full_nam"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:gravity="center"
                    android:textColor="@color/profile_data_color"
                    android:textSize="17sp" />


            </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="18sp"
                android:paddingEnd="18sp"
                android:background="@drawable/round_button"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="@color/profile_text_color"
                    android:gravity="center"
                    android:text="Gender : "
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_ud_gen"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="@color/profile_data_color"
                    android:gravity="center"
                    android:textSize="17sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="18sp"
                android:paddingEnd="18sp"
                android:background="@drawable/round_button"
                android:layout_marginTop="10sp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="@color/profile_text_color"
                    android:gravity="center"
                    android:text="Roll No. : "
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_ud_roll_no"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="@color/profile_data_color"
                    android:gravity="center"
                    android:textSize="17sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="18sp"
                android:paddingEnd="18sp"
                android:background="@drawable/round_button"
                android:layout_marginTop="10sp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="@color/profile_text_color"
                    android:gravity="center"
                    android:text="Blood Group : "
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_ud_bl_grp"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="@color/profile_data_color"
                    android:gravity="center"
                    android:textSize="17sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="18sp"
                android:paddingEnd="18sp"
                android:background="@drawable/round_button"
                android:layout_marginTop="10sp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="@color/profile_text_color"
                    android:gravity="center"
                    android:text="District : "
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t_ud_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="@color/profile_data_color"
                    android:gravity="center"
                    android:textSize="17sp" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_ud_snd_msg"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:text="Send Message"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="@drawable/round_button"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"/>



        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_ud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
