<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:background="@color/transparent"
    android:paddingLeft="10sp"
    android:paddingRight="10sp">

    <TextView
        android:id="@+id/dl_t_full_nam"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginRight="5sp"
        android:text="Tanzid Hasan Badhon"
        android:background="@color/dl_back_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.38"
        app:layout_constraintEnd_toStartOf="@id/dl_t_bl_grp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <TextView
        android:id="@+id/dl_t_bl_grp"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:text="ABO"
        android:background="@color/dl_back_color"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dl_t_dist"
        app:layout_constraintStart_toEndOf="@id/dl_t_full_nam"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/dl_t_dist"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="5sp"
        android:text="Chapainawabganj"
        android:background="@color/dl_back_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dl_t_bl_grp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
